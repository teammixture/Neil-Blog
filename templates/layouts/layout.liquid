<!doctype html>
<html lang="en">
    <head>
        <meta name="HandheldFriendly" content="True">
        <meta name="MobileOptimized" content="320">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="alternate" type="application/rss+xml" href="/rss" title="RSS Feed">
        <title>{% block title %}Neil Kinnish{% endblock %} | Developer / Creative / Consultant. Currently meddling with new technology and ideas. Co-founder @teammixture @workfu.</title>
        <link rel="shortcut icon" type="image/ico" href="{{ "favicon.ico" | asset_url }}" />
        {{ "app.css" | asset_url | stylesheet_tag }}
        <link rel="stylesheet" href="{{ "layout.css" | asset_url }}" media="(min-width:1em)">
        {{ "modernizr.min.js" | asset_url | script_tag }}
    </head>
    <body>
        <div class="wrapper">
            {% include "header" %}
            <div class="content">
                <article>
                    <h1>{{ model.title }}</h1>
                    {% include "articles/date" with model.date %}
                    {% block content %}{% endblock %}
                    <div id="disqus_thread"></div>
                    <script type="text/javascript">
                        var disqus_shortname = 'neilk';
                        var disqus_url = '{{ model.disqus }}';
                        (function() {
                            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                        })();
                    </script>
                    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments.</a></noscript>
                </article>
            </div>
            {% include "footer" %}
        </div>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
        {{ "app.js" | asset_url | script_tag }}
    </body>
</html>
